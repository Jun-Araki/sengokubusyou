<section class="form-post-user background-white">
  <h2><%= t('.sign_up') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <div class="col-1 form-icon">
        <%= f.label :nickname do %>
          <i class="fa-solid fa-user"></i> 
        <% end %>
      </div>
      <div class="col-11">
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control", placeholder: "ニックネーム", required: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-1 form-icon">
        <%= f.label :email do %>
          <i class="fa-solid fa-envelope"></i>
        <% end %>
      </div>
      <div class="col-11">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス", required: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-1 form-icon">
        <%= f.label :password do %>
          <i class="fa-solid fa-lock"></i>
        <% end %>
      </div>
      <div class="col-11">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", 
        placeholder: "パスワード#{t('devise.shared.minimum_password_length', count: @minimum_password_length)}", required: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-1 form-icon">
        <%= f.label :password_confirmation do %>
          <i class="fa-solid fa-lock"></i>
        <% end %>
      </div>
      <div class="col-11">
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "パスワード（確認）", required: true %>
      </div>
    </div>

    <button type="submit" class="btn btn-regist form-group">登録</button>
  <% end %>

  <hr>
  <%= render "devise/shared/links" %>
</section>