<h2><%= t('.title', resource: resource.model_name.human) %></h2>

<section class="form-post-user" >
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <div class="col-sm-1 form-icon">
      <%= f.label :user_image do %>
        <i class="fa-solid fa-image"></i>
      <% end %>
    </div>
    <div class="col-sm-11">
      <%= f.file_field :user_image, accept: "image/png,image/jpeg,image/gif", autofocus: true, autocomplete: "user_image", class: "form-control", placeholder: "アイコン画像" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-1 form-icon">
      <%= f.label :nickname do %>
        <i class="fa-solid fa-user"></i> 
      <% end %>
    </div>
    <div class="col-sm-11">
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control", placeholder: "ニックネーム", required: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-1 form-icon">
      <%= f.label :email do %>
        <i class="fa-solid fa-envelope"></i>
      <% end %>
    </div>
    <div class="col-sm-11">
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス", required: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-1 form-icon">
      <%= f.label :profile do %>
        <i class="fa-regular fa-address-card"></i>
      <% end %>
    </div>
    <div class="col-sm-11">
      <%= f.text_area :profile, autofocus: true, autocomplete: "profile", class: "form-control", placeholder: "自己紹介（200字以内）" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-1 form-icon">
      <%= f.label :twitter do %>
        <i class="fa-brands fa-twitter"></i>
      <% end %>
    </div>
    <div class="col-sm-11">
      <%= f.text_field :twitter, autofocus: true, autocomplete: "twitter", class: "form-control", placeholder: "https://twitter.com/アカウント名" %>
    </div>
  </div>

  <%= button_tag type: 'submit', class: 'btn btn-regist form-group' do %>
      <i class="fa-regular fa-square-plus"></i>&nbsp;<span>更新</span>
  <% end %>

  <div class="btn btn-regist form-group">
    <%= f.submit "更新" %>
  </div>
<% end %>


<p><%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %></p>