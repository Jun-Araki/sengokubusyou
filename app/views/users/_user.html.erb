<div class="row">
  <div class="col-lg-1 col-md-1 col-2">
    <%= link_to user do %>
      <%= image_tag user.user_image.thumb.url, class: "user-img-thumb" %>
    <% end %>
  </div>

  <div class="col-lg-8 col-md-7 col-10 user-show-name">
    <%= link_to user do %>
      <b><%= user.nickname %></b><br>
      <%= user.profile %>
    <% end %>
  </div>

  <div class="col-lg-2 col-md-3 col-12 follow-unfollow">
    <% unless current_user?(user) %>
      <% if current_user.following?(user) %>
        <%= form_with(model: current_user.active_relationships.find_by(followed_id: user.id),
                    html: { method: :delete }, local: true) do |f| %>
        <%= f.submit "フォロー中", class: "btn btn-unfollow" %>
        <% end %>
      <% else %>
        <%= form_with(model: current_user.active_relationships.build, local: true) do |f| %>
          <%= hidden_field_tag :followed_id, user.id %>
          <%= f.submit "フォロー", class: "btn btn-follow" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<% unless @users.last == user %>
  <hr>
<% end %>