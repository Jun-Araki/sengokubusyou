<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.nickname %></h1>
      <span><%= link_to "#{@user.nickname}のページ", @user %></span>
      <span><b>登録武将数:</b> <%= @user.posts.count %></span>
    </section>
  </aside>

   <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>