<%= render "layouts/error_messages" %>

<%= form_with model: @post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %> <br>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :furigana %> <br>
    <%= form.text_field :furigana, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :furigana_initial %> <br>
    <%= form.collection_select :furigana_initial, Furigana.all, :ini, :ini, {include_blank: "---"}, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :prefecture_name %> <br>
    <%= form.collection_select :prefecture_name, Prefecture.all, :name, :name, {include_blank: "---"}, class: "form-control", required: true  %>
  </div>
  <div class="form-group">
    <%= form.label :image %> <br>
    <%= form.file_field :image, class: "form-control" %>
  </div>
  <div>
    <%= form.submit button_value, class: "btn btn-primary btn-block", required: true %>
  </div>
<% end %>