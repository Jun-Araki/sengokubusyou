<%= render "layouts/error_messages" %>

<%= form_with model: @post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %> <br>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :birthplace %> <br>
    <%= form.text_field :birthplace, class: "form-control", required: true  %>
  </div>
  <div class="form-group">
    <%= form.label :url %> <br>
    <%= form.text_field :url, class: "form-control", required: true  %>
  </div>
  <div class="form-group">
    <%= form.label :image %> <br>
    <%= form.file_field :image, class: "form-control" %>
  </div>
  <div>
    <%= form.submit button_value, class: "btn btn-primary btn-block", required: true %>
  </div>
<% end %>