<%= render "layouts/error_messages" %>

<h2>武将<%= title %></h2>

<div class="text-start">
  <%= form_with model: @post, local: true do |form| %>
    <div class="form-group mb-3">
      <%= form.label :name %> <br>
      <%= form.text_field :name, class: "form-control", required: true, placeholder: "真田幸村" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :kana %> <br>
      <%= form.text_field :kana, class: "form-control", required: true, placeholder: "さなだゆきむら" %>
    </div>
    
    <div class="form-group mb-3">
      <%= form.label :initial %> <br>
      <%= form.select :initial, Post.initials.keys , {include_blank: "選んでください"}, class: "form-control", required: true %>
    </div>
    
    <div class="form-group mb-3">
      <%= form.label :prefecture %> <br>
      <%= form.select :prefecture, Post.prefectures.keys, {include_blank: "選んでください"}, class: "form-control", required: true  %>
    </div>
    
    <div class="form-group mb-3">
      <%= form.label :commentary %> <br>
      <%= form.text_area :commentary, class: "form-control form-area", required: true,
          placeholder: "昌幸の次男。蟄居先の紀伊九度山から大坂城に入り、大坂の陣で寡兵ながらも徳川の大軍を相手に奮戦した。その戦いぶりは「真田日本一の兵」と称賛された。" %>
    </div>
    
    <div class="form-group mb-3">
      <%= form.label :image %> <br>
      <%= form.file_field :image, class: "form-control", accept: "image/png,image/jpeg,image/gif" %>
    </div>
    
    <%= button_tag type: 'submit', class: 'btn btn-regist form-group' do %>
      <%= button_value %>
    <% end %>
  <% end %>

  <% if title == "編集" %>
    <%= link_to post_path, class: "btn btn-index form-group w-100 mb-3" do %>
      <i class="fa-regular fa-user"></i>&nbsp;<span>武将詳細に戻る</span>
    <% end %>
  <% end %>
</div>