    <%= link_to user do %>
      <div class="card-title"><p class="rank-num">第<%= i %>位</p><%= user.nickname %></div>
      <div class="card-img-top">
        <%# <%= image_tag user.image.url, :size => "150" %> %>
      </div>
    <% end %>

    <div class="card-body">
      <%# <p class="card-text"><%= post.commentary %></p> %>
      <%= link_to user, class: "btn btn-show-delete" do %>
        <i class="fas fa-envelope-open-text"></i>&nbsp;<span>詳細</span>
      <% end %>
    </div>
  </div>
</div>