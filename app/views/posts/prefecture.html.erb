<% if params[:prefecture].present? %>
  <h1><%= params[:prefecture] %>の戦国武将</h1>

  <h1><%= Post.display_prefecture(params[:prefecture]) =%>の戦国武将</h1>


  <p>検索結果&nbsp;<%= Post.select_prefecture(params[:prefecture]).count %>件</p> 

  <section class="row g-4 card-area">
    <%= render @posts %>
  </section>

  <section class="pagination">
    <%= paginate @posts %>
  </section>
  <br>
  <br>
<% end %>

<section class="background-white prefecture-area">
  <h1>出身地で探す</h1>

  <div class="btn-prefecture text-start">
    <p>北海道・東北地方</p>
    <hr>
    <div class="row">
      <% Post.prefectures.each do |k, v| %>
        <% if v >= 1 && v <= 7 %>
        <div class="col-4 col-sm-3 col-md-2 col-lg-1 mb-5">
          <b><%= link_to "#{k}", prefecture_posts_path(prefecture: "#{v}") %></b>
        </div>
        <% end %>
      <% end %>
    </div>

    <p class="mt-3">関東地方</p>
    <hr>
    <div class="row">
      <% Post.prefectures.keys[7..13].each do |p| %>
        <div class="col-4 col-sm-3 col-md-2 col-lg-1 mb-5">
          <b><%= link_to "#{p}", prefecture_posts_path(prefecture: "#{p}") %></b>
        </div>
      <% end %>
    </div>

    <p class="mt-3">中部地方</p>
    <hr>
    <div class="row">
      <% Post.prefectures.keys[14..22].each do |p| %>
        <div class="col-4 col-sm-3 col-md-2 col-lg-1 mb-5">
          <b><%= link_to "#{p}", prefecture_posts_path(prefecture: "#{p}") %></b>
        </div>
      <% end %>
    </div>

    <p class="mt-3">近畿地方</p>
    <hr>
    <div class="row">
      <% Post.prefectures.keys[23..29].each do |p| %>
        <div class="col-4 col-sm-3 col-md-2 col-lg-1 mb-5">
          <b><%= link_to "#{p}", prefecture_posts_path(prefecture: "#{p}") %></b>
        </div>
      <% end %>
    </div>

    <p class="mt-3">中国・四国地方</p>
    <hr>
    <div class="row">
      <% Post.prefectures.keys[30..38].each do |p| %>
        <div class="col-4 col-sm-3 col-md-2 col-lg-1 mb-5">
          <b><%= link_to "#{p}", prefecture_posts_path(prefecture: "#{p}") %></b>
        </div>
      <% end %>
    </div>

    <p class="mt-3">九州地方</p>
    <hr>
    <div class="row">
      <% Post.prefectures.keys[39..45].each do |p| %>
        <div class="col-4 col-sm-3 col-md-2 col-lg-1 mb-5">
          <b><%= link_to "#{p}", prefecture_posts_path(prefecture: "#{p}") %></b>
        </div>
      <% end %>
    </div>
  </div>
</section>