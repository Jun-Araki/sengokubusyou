<h1>武将一覧</h1>
<table>
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">武将名</th>
      <th scope="col">キャッチコピー</th>
      <th scope="col"></th>
    </tr>
  </thead> 
  <tbody>
    <% @posts.each.with_index(1) do |post, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= post.name %></td>
        <td><%= post.catch_copy %></td>
        <td>
          <%= link_to "詳細", post_path(post) %>
          <%= link_to "編集", edit_post_path(post) %>
          <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "登録解除しますか?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>